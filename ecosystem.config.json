{
  "apps": [
    {
      "name": "app",
      "script": "npm run restart",
      "instances": 1,
      "autorestart": true,
      "watch": [
        "serve.mjs",
        "package.json",
        "ecosystem.config.json"
      ],
      "max_memory_restart": "1G"
    },
    {
      "name": "nginx",
      "script": "sudo nginx -s stop && -c /home/ec2-user/app/nginx.conf",
      "instances": 1,
      "autorestart": false,
      "watch": [
        "ecosystem.config.json",
        "nginx.conf"
      ],
      "max_memory_restart": "1G"
    }
  ]
}
